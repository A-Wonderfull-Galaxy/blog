<h2 class="text-center">@{{username}}'s Posts</h2>

{{!-- to create a new post here --}}
<div class='text-center'>

    <button type="button" id='show-form' class="btn">Create a New Post</button>

    <form class='text-center new-post'> 
        <div id="post-form" class="d-none">
            <input type="text" id="post-title" name="post-title" placeholder="title" />
            <textarea class="form-control blog-text" name='post-body' rows="3" placeholder="Type your post here..."></textarea>
            <button type="submit" class="btn">Submit Post</button>
        </div>
    </form>

</div>

{{!-- view blog post and to delete --}}
{{#if posts.length}}
<section>
    {{#each posts as |post|}}
        <div class="m-3">
            <h1 class="my-3">{{post.title}}</h1>

            <h6 class="card-subtitle"> {{post.created_at}} </h6>

            <p class="card-text">{{post.post_text}}</p>

            {{!-- delete function --}}
            <button class="btn" id="delete-btn">Delete Post #{{post.id}}</button>  

            <a href="/dashboard/{{post.id}}" class="btn text-left" id="update-btn">Updating</a>
        </div>
    {{/each}}
</section>
{{/if}}

<script src="/javascript/dashboard.js"></script>